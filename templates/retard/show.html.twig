{% extends 'layout.html.twig' %}


{% block body %} 
<div class="row card" style="padding:30px;width:80%;">

    <h1 style="text-align:center;">Retard</h1>
<br>
<hr>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ retard.id }}</td>
            </tr>
            <tr>
                <th>Etudiant</th>
                <td>{{ retard.etudiant.prenom }} {{retard.etudiant.nom}} </td>
            </tr>
            <tr>
                <th>Filiere</th>
                <td>{{retard.etudiant.filiere.name}} </td>
            </tr>
             <tr>
                <th>Date</th>
                <td>{{ retard.date ? retard.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ retard.heure ? retard.heure|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('retard_index') }}">Retour sur la liste</a>

    <a href="{{ path('retard_edit', {'id': retard.id}) }}">Modifier</a>

    {{ include('retard/_delete_form.html.twig') }}
     
</div>

{% endblock %}
