{% extends 'layout.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}

 <div class="col-md-12 grid-margin stretch-card" style="height:150px;background-color:gray;display:flex;justify-content:center;">
<div class="col-md-2" style="padding-top:50px;">
<image src="data:image/png;base64,{{ etudiant.image }}" style="height:200px;width:200px;border-radius:100%;"></div>
</div>
<br><br>
<br><br>

    <hr style="text-align:center;">

<h2 style="text-align:center;" >Détails de l'étudiant</h2>
<hr style="text-align:center;">
    <table class="table">
        <tbody>
           
            <tr>
                <th>Prenom</th>
                <td>{{ etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ etudiant.nom }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{{ etudiant.dateofbirth}}</td>
            </tr>
            <tr>
                <th>Lieunaissance</th>
                <td>{{ etudiant.lieunaissance }}</td>
            </tr>
           
            <tr>
                <th>Numpiece</th>
                <td>{{ etudiant.numpiece }}</td>
            </tr>
            <tr>
                <th>MobileNumber</th>
                <td>{{ etudiant.mobileNumber }}</td>
            </tr>
            <tr>
                <th>FixNumber</th>
                <td>{{ etudiant.fixNumber }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ etudiant.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ etudiant.email }}</td>
            </tr>
        </tbody>
    </table>

  
    <hr style="text-align:center;">

<h2 style="text-align:center;" >Retards </h2>
<hr style="text-align:center;">
    <table id="datatable-buttons" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for retard in etudiant.retards %}
            <tr>
                <td>{{ retard.id }}</td>
                <td>{{ retard.date ? retard.date|date('Y-m-d') : '' }}</td>
                <td>{{ retard.heure ? retard.heure|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('retard_show', {'id': retard.id}) }}">Afficher</a>
                    <a href="{{ path('retard_edit', {'id': retard.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de resultats</td>
            </tr>
        {% endfor %}
        </tbody>
                        <a href="{{ path('retard_new') }}">Ajouter</a>

    </table>
    {{ include('etudiant/_delete_form.html.twig') }}
{% endblock %}
