                <td>{{ etudiant.mobileNumber }}</td>
            </tr>
            <tr>
                <th>FixNumber</th>
                <td>{{ etudiant.fixNumber }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ etudiant.adresse }}</td>
